<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.s1.bankBook.BankBookDAO">
  
  	<select id="getBankBookList" resultType="com.iu.s1.bankBook.BankBookDTO" >
  		SELECT 	* FROM BANKBOOK
  	</select>
  	
  	<select id="getBankBookDetail" parameterType="com.iu.s1.bankBook.BankBookDTO" resultType="com.iu.s1.bankBook.BankBookDTO">
  		SELECT * FROM BANKBOOK WHERE BOOKNUMBER = #{bookNumber}
  	</select>
  	
  	<insert id="setBankBookAdd" parameterType="com.iu.s1.bankBook.BankBookDTO">
  		INSERT INTO BANKBOOK
  		VALUES(BANKNUM_SEQ.NEXTVAL, #{bookName}, #{bookRate}, #{bookSale}, #{bookDetail})
  	</insert>
  	
  	<delete id="setBankBookDelete" parameterType="com.iu.s1.bankBook.BankBookDTO">
  		DELETE BANKBOOK WHERE BOOKNUMBER =#{bookNumber}
  	</delete>
  
  </mapper>
  